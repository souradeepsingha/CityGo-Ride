    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <!-- Customize the tab layout style here -->
    </style>

    <style name="SelectedTabStyle">
        <item name="android:textColor">#ffffff</item>
        <!-- Add other style attributes for the selected tab here -->
    </style>

    <style name="UnselectedTabStyle">
        <item name="android:textColor">#111111</item>
        <!-- Add other style attributes for the unselected tabs here -->
    </style>

    <style name="Theme.User.Fullscreen" parent="Theme.User">
        <item name="android:actionBarStyle">@style/Widget.Theme.User.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.User.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>


