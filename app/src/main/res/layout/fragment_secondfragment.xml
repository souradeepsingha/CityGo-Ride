<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.secondfragment"

    android:orientation="vertical"


    >





    <AutoCompleteTextView
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:hint="Location"
        android:layout_width="1dp"
        android:background="@drawable/border_locationedttxt"
        android:backgroundTint="#CFCFCF"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:layout_height="1dp"
        android:id="@+id/autocomplete" />
    <AutoCompleteTextView
        android:textColor="@color/black"
        android:hint="Destination"
        android:background="@drawable/border_locationedttxt"
        android:backgroundTint="#CFCFCF"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/autocomplete1" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/shadowdest"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            >

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/greensmall_circle"

                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:text="  Enter your Destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:layout_gravity="center"

                android:textSize="20dp"




                android:textStyle="italic"


                />

        </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <EditText
            android:id="@+id/idEdtDate"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/shadowdest"
            android:drawableLeft="@drawable/circle_red"
            android:text=" Booking Date"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="10dp"
            />



        <EditText
            android:id="@+id/edittime"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="8dp"
            android:drawableLeft="@drawable/circle_red"
            android:background="@drawable/shadowdest"
           android:text=" Booking Time"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="10dp"
            />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:id="@+id/button1"
        android:text="Search"
        />




</LinearLayout>