<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Advancebooktrack"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:background="#292929"
    >
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/arrowwhite"
        android:id="@+id/backhome"


        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/historywhite"

        />



    <TextView
        android:id="@+id/waitingTimeTV"
        android:layout_width="220dp"
        android:layout_height="40dp"
    android:gravity="center"
        android:text="40 hours pending"
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:textSize="25dp"
    />
    </LinearLayout>


</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:gravity="center"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:src="@drawable/wait_test"

        />

    <TextView
        android:id="@+id/waitingTv"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="Please wait for driver accept"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        />

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/navigationsearch"
            android:padding="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/carimage_test" />



                <TextView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="Auto"
                    android:gravity="center"
                    android:textSize="20dp"

                    />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="8 mins"
                    android:gravity="center"
                    android:textSize="15dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                 android:layout_marginLeft="100dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/rupeevalue"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E6E6E6"
                android:padding="10dp"
                >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                android:layout_gravity="center"

                android:id="@+id/linearcoupon"
                android:layout_margin="5dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:src="@drawable/green_discount"
                    android:layout_margin="10dp"/>



                <TextView
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:text="Add Coupon here"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="italic"

                    />

                <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"

                android:gravity="center"
                android:src="@drawable/arrowright"
                android:layout_marginLeft="100dp"

               android:id="@+id/arrowright"
                />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                   android:id="@+id/arrowdown"
                    android:gravity="center"
                    android:src="@drawable/arrowdown"
                    android:layout_marginLeft="100dp"
                     android:visibility="gone"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/linear2"
                android:orientation="horizontal"
                >
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                      android:background="@drawable/backgroundfirstfragment"
                     android:hint="Enter coupon code"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"

                    android:id="@+id/edittextcoupon"
                    />
                <Button
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Apply"
                    android:id="@+id/buttoncoupon"


                    />

            </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/payment"
                android:text="pay now"

                android:layout_marginTop="30dp"
                android:backgroundTint="#292929"
                />


        </LinearLayout>





    </LinearLayout>
</LinearLayout>