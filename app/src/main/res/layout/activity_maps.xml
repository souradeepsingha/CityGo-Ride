<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MapsActivity"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:background="#191919"
        android:padding="10dp"

        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrowwhite"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/background_maptime"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/historywhite"
                />

            <TextView
                android:id="@+id/distanceFromDriver"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:text=""
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#ffffff"
                />


        </LinearLayout>


    </LinearLayout>


    <fragment
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        ></fragment>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="10dp"



            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/car1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />



            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="Auto"
                android:gravity="center"
                android:textSize="20dp"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="150dp"

                />
            <TextView
                android:id="@+id/textdistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:textStyle="bold"


                android:text="120"

                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E6E6E6"
            android:padding="10dp"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                android:layout_gravity="center"

                android:id="@+id/linearcoupon"
                android:layout_margin="5dp"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:src="@drawable/green_discount"
                    android:layout_margin="10dp"/>



                <TextView
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:text="Add Coupon here"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:textStyle="italic"

                    />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"

                    android:gravity="center"
                    android:src="@drawable/arrowright"
                    android:layout_marginLeft="100dp"

                    android:id="@+id/arrowright"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:id="@+id/arrowdown"
                    android:gravity="center"
                    android:src="@drawable/arrowdown"
                    android:layout_marginLeft="100dp"
                    android:visibility="gone"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/linear2"
                android:orientation="horizontal"
                >
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/backgroundfirstfragment"
                    android:hint="Enter coupon code"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"

                    android:id="@+id/edittextcoupon"
                    />
                <Button
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:text="Apply"
                    android:id="@+id/buttoncoupon"


                    />

            </LinearLayout>
        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/payment"
            android:text="pay now"
            android:textColor="#ffffff"
            android:backgroundTint="#191919"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />


    </LinearLayout>





</LinearLayout>