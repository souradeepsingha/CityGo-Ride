<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Supportservice1"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Question 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Q1: What is the importance of using strong passwords?"
                android:textSize="16sp"
                android:textColor="#000000" />

            <!-- Answer 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="A1: Using strong passwords is crucial to protect your accounts from unauthorized access. Strong passwords are long, contain a mix of uppercase and lowercase letters, numbers, and special characters, making them difficult for attackers to guess or crack."
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginTop="8dp" />

            <!-- Question 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="Q2: How can I safeguard my online accounts from phishing attacks?"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />

            <!-- Answer 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="A2: To safeguard against phishing attacks, always verify the authenticity of URLs before entering sensitive information. Avoid clicking on suspicious links and use two-factor authentication (2FA) whenever possible."
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginTop="8dp" />

            <!-- Add more questions and answers here -->

        </LinearLayout>
    </ScrollView>

</LinearLayout>