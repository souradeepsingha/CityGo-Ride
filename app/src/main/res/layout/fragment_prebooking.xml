<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Fragment.prebookingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="@drawable/backgroundfirstfragment"
        android:padding="10dp"
        android:layout_margin="10dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/shadowdest"
            android:orientation="horizontal"
            android:layout_gravity="center"

            >

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/greensmall_circle"

                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:text="  Enter your Destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text3"
                android:layout_gravity="center"

                android:textSize="20dp"




                android:textStyle="italic"


                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"

            >

            <EditText
                android:id="@+id/idEdtDate"
                android:layout_width="170dp"
                android:layout_height="60dp"

                android:background="@drawable/shadowdest"
                android:drawableLeft="@drawable/circle_red"
                android:text="  Bookingdate"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_gravity="center"

                android:padding="10dp"
                />



            <EditText
                android:id="@+id/edittime"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"

                android:background="@drawable/shadowdest"
                android:drawableLeft="@drawable/circle_red"

                android:text="  Booking time"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:id="@+id/button1"
            android:backgroundTint="#191919"
            android:text="Book Ride"
            android:drawableRight="@drawable/baseline_arrow_forward_24"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/shadowdest"
        >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:orientation="vertical"


            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Copy code got 20% off"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:textColor="#040404"
                android:textStyle="italic"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="C I T Y G O 3 0"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#ffffff"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:layout_marginTop="30dp"
                android:text="Copy the code "
                android:textSize="20dp"
                android:textColor="#2A57DC"
                android:layout_marginLeft="20dp"


                />



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/copycode"

                android:scaleType="fitCenter"

                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>