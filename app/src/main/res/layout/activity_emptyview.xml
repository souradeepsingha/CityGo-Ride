<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.emptyview"

    android:orientation="vertical"

    android:background="@drawable/navigationsearch"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"

        >

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/copypagelinearback1"
            >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/backbtn2"
                    android:src="@drawable/baseline_arrow_back_24"
                    />
        </LinearLayout>

        <AutoCompleteTextView
            android:hint=" Enter Your Location"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/autocomplete"
            tools:ignore="MissingConstraints"
            android:padding="10dp"
            android:background="@drawable/searchedittext"


            />

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#D5D5D5"
                >



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#EFEFEF"

            >
<ImageView
    android:layout_width="50dp"
    android:layout_height="40dp"
        android:src="@drawable/baseline_edit_location_alt_24"

        />
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                        android:text="RECENT SEARCHES"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="15dp"

                        />



        </LinearLayout>
        <ListView
            android:id="@+id/recentSearchListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/autocomplete"
            android:layout_marginTop="16dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="No recent searches"
                android:textSize="15dp"
            android:textStyle="italic"
            android:layout_margin="40dp"

            android:id="@+id/textView"
            android:textColor="#505050"
            android:paddingLeft="100dp"
                />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#EFEFEF"

            >
<!--                <Button-->
<!--                    android:id="@+id/button_location"-->
<!--                    android:text="Get Location"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"/>-->



        </LinearLayout>
        <!-- activity_main.xml -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
        </LinearLayout>


</LinearLayout>