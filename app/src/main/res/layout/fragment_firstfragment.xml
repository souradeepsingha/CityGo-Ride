<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.firstfragment"
    android:background="#FFFFFF"
    android:orientation="vertical"

    >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="@drawable/backgroundfirstfragment"
            android:padding="10dp"
            android:layout_margin="10dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shadowdest"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"

                >



                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/greensmall_circle"

                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"

                    />
                <TextView
                    android:text="  Enter your Destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text3"
                    android:layout_gravity="center"


                    android:ellipsize="end"
                    android:ems="3"
                    android:gravity="left"
                    android:lines="1"

                    android:textColor="@color/black"
                    android:textSize="18dp"


                    />

            </LinearLayout>


            <!--        <Button-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="60dp"-->
            <!--            android:text="Search Cars"-->
            <!--            android:id="@+id/button1"-->
            <!--            />-->
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Book Ride"
                android:id="@+id/button1"
                android:textSize="16dp"

                android:backgroundTint="#191919"
                android:drawableRight="@drawable/baseline_arrow_forward_24"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/shadowdest"
            android:id="@+id/copycopon"
            >

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:orientation="vertical"


                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Copy code got 20% off"
                    android:textSize="18dp"
                    android:layout_margin="10dp"
                    android:textColor="#040404"
                    android:textStyle="italic"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="C I T Y G O 3 0"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#ffffff"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"

                    android:layout_marginTop="30dp"
                    android:text="Copy the code "
                    android:textSize="20dp"
                    android:textColor="#2A57DC"
                    android:layout_marginLeft="20dp"


                    />



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/copycode"

                    android:scaleType="fitCenter"

                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>